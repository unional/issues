{
  "name": "@unional/issues",
  "description": "",
  "version": "0.0.0",
  "scripts": {
    "lint": "tslint 'src/**/*.ts'",
    "test": "jest",
    "watch": "jest --watch"
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "homepage": "https://github.com/unional/issues",
  "bugs": {
    "url": "https://github.com/unional/issues/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/unional/issues.git"
  },
  "private": true,
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "babelConfig": false,
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-audio-reporter"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.(accept|unit|spec).ts"
    ],
    "watchPlugins": [
      [
        "jest-watch-toggle-config",
        {
          "setting": "verbose"
        }
      ],
      [
        "jest-watch-toggle-config",
        {
          "setting": "collectCoverage"
        }
      ],
      [
        "jest-watch-suspend",
        {
          "suspend-on-start": true
        }
      ]
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "dependency-check": "^3.2.1",
    "eslint": "^5.6.0",
    "eslint-config-unional": "^0.3.6",
    "jest": "^23.6.0",
    "jest-audio-reporter": "^2.0.1",
    "jest-watch-suspend": "^1.0.1",
    "jest-watch-toggle-config": "^1.0.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.1",
    "tslint": "^5.11.0",
    "tslint-config-unional": "^0.9.6",
    "typescript": "^3.0.3"
  }
}
